@model ApplicationUser

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/LoggaInPaKontot.css" asp-append-version="true" />
    <title>Logga In</title>
</head>

<body>
    <div class="login-container">
        <h1>Välkommen tillbaka!</h1>
        <p class="subtitle">Logga in på ditt konto</p>

        <form method="post" action="/Konto/LoggaInPaKontot" autocomplete="off" class="login-form">
            <div class="input-group">
                <label for="Email">Email</label>
                <input type="email" asp-for="Email" id="Email" placeholder="exempel@mail.com" required />
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>

            <div class="input-group">
                <label for="Loserord">Lösenord</label>
                <input type="password" name="losenord" id="Loserord" placeholder="••••••••" required />
            </div>

            <button type="submit" class="login-button">Logga in</button>
        </form>

        <p class="hint">Har du inget konto? <a href="/Konto/SkapaKonto">Skapa ett här!</a></p>
    </div>
</body>

</html>
